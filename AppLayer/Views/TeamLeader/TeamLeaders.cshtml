@{
}


<h2 class="topdiv">Team leaders</h2>

<table class="table  table-bordered mt-4">
    <thead>
        <tr>
            <th>
                Employee name
            </th>

            <th>
                Employee email
            </th>
            <th>
                Band name
            </th>



        </tr>

    </thead>
    <tbody>
        @foreach (var TeamLeader in ViewBag.TeamLeaders)
        {
            <tr>
                <td>@TeamLeader.FirstName  @TeamLeader.LastName</td>
                <td>@TeamLeader.Email</td>


                @foreach (var Band in ViewBag.Bands)
                {
                    if (Band.BandId == TeamLeader.BandId)
                    {
                        <td>@Band.BandTitle</td>

                    }
                }


            </tr>


        }
    </tbody>




</table>
