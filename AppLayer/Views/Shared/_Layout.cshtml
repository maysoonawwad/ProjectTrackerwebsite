@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Spectrum</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>

    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
   
</head>
<body>
   
    <header id="header" class="header fixed-top shadow-sm bg-white">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a href="" class="logo d-flex align-items-center">

                <span>Spectrum</span>
            </a>

            <nav id="navbar" class="navbar ">
                <ul>
                    <li><a class="nav-link scrollto active" asp-controller="Home" asp-action="Index">Home</a></li>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <li><a class="nav-link scrollto" asp-controller="Admin" asp-action="AddEmployee">Employees</a></li>
                    }
                    @if (User.IsInRole("PROJECTMANAGER"))
                    {
                        <li><a class="nav-link scrollto" asp-controller="Project" asp-action="AddProject">Add Project</a></li>
                        <li><a class="nav-link scrollto" asp-controller="Project" asp-action="PMProjects">Dashboard</a></li>
                    }
                    @if (User.IsInRole("TEAMLEADER"))
                    {
                        <li>
                            <a class="nav-link scrollto" asp-area="" asp-controller="TeamLeader" asp-action="MyProjects">My projects</a>

                        </li>
                    }
                    @if (User.IsInRole("TEAMMEMBER"))
                    {

                        <li>
                            <a class="nav-link scrollto" asp-area="" asp-controller="TeamMember" asp-action="TeamMemberProjects" asp-route-TeamMemberId="@User.FindFirst(ClaimTypes.NameIdentifier).Value">My projects</a>
                        </li>
                    }
                    <partial name="_LoginPartial" />

                  </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header>
    <div class="container pb-5">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <!-- Vendor JS Files -->
    <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/vendor/aos/aos.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
